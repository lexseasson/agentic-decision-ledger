{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Decision Contract",
  "type": "object",
  "required": ["decision_id", "title", "owner", "intent", "constraints", "success_criteria"],
  "properties": {
    "decision_id": { "type": "string", "minLength": 3 },
    "title": { "type": "string", "minLength": 3 },
    "owner": {
      "type": "object",
      "required": ["team", "approver"],
      "properties": {
        "team": { "type": "string" },
        "approver": { "type": "string" }
      },
      "additionalProperties": true
    },
    "intent": {
      "type": "object",
      "required": ["goal"],
      "properties": {
        "goal": { "type": "string", "minLength": 10 },
        "scope": {
          "type": "object",
          "properties": {
            "includes": { "type": "array", "items": { "type": "string" } },
            "excludes": { "type": "array", "items": { "type": "string" } }
          },
          "additionalProperties": true
        }
      },
      "additionalProperties": true
    },
    "assumptions": { "type": "array", "items": { "type": "string" } },
    "constraints": {
      "type": "object",
      "required": ["bounded_authority"],
      "properties": {
        "bounded_authority": {
          "type": "object",
          "required": ["can_write_paths", "cannot_touch"],
          "properties": {
            "can_write_paths": { "type": "array", "items": { "type": "string" } },
            "cannot_touch": { "type": "array", "items": { "type": "string" } }
          },
          "additionalProperties": true
        }
      },
      "additionalProperties": true
    },
    "signals_considered": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "evidence"],
        "properties": {
          "name": { "type": "string" },
          "evidence": { "type": "string" }
        },
        "additionalProperties": true
      }
    },
    "alternatives_rejected": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["option", "rejected_because"],
        "properties": {
          "option": { "type": "string" },
          "rejected_because": { "type": "string" }
        },
        "additionalProperties": true
      }
    },
    "success_criteria": { "type": "array", "items": { "type": "string", "minLength": 10 } },
    "revocation": { "type": "object", "additionalProperties": true }
  },
  "additionalProperties": true
}
